<scroll-view 
hidden="{{isLyricShow}}" 
class="lyric-scroll" 
scroll-top="{{scrollTop}}" 
scroll-y="true"
scroll-with-animation="true"
>
	<view class="lyric-panel">
		<block wx:for="{{lrcList}}" wx:key="item">
			<view class="lyric {{index == nowLyricIndex ? 'hightlight-lyric':''}}">{{item.lrc}}</view>
		</block>
	</view>
</scroll-view>